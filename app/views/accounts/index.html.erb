<h1>Bank Accounts</h1>

<div id="acct_hub">
  <div id="new_acct_div">
    <%= button_to "New Account", new_account_path, method: :get, id: "new_acct_link" %>
  </div>
  
  <div class="acct_data clear">
    <ul id="acct_list">
      <% @accounts.each do |acct| %>
        <li>
          <%= link_to acct.name, account_path(acct.id), class: "show_acct_link" %>
          <%= ".......................   $" + acct.balance.to_s  %>
        </li>
      <% end %>
    </ul>
    <div id="accts_total">TOTAL $<%= @net_total.to_s %></div>
  </div>

  <hr>

    <%= button_to "Withdraw/Transfer", wd_xfer_path, method: :get, id: "accts_deposit_link" %>
    <%= button_to "Desposit", deposit_path, method: :get, id: "accts_deposit_link" %>
</div>
